
import static org.junit.Assert.*;
import org.junit.Test;

public class SolutionTest{
    @Test
    public void testAman(){
        String inString="A man, a plan, a canal: Panama";
        boolean expect=true;
        assertEquals(expect,new Solution().isPalindrome(inString));
    }

    @Test
    public void testRaceaCar(){
        String inString="race a car";
        boolean expect=false;
        assertEquals(expect,new Solution().isPalindrome(inString));
    }

    @Test
    public void testAb_a(){
        String inString="ab_a";
        boolean expect=false;
        assertEquals(expect,new Solution().isPalindrome(inString));
    }

}
